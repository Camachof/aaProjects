<h1>Input an album name!</h1>

<body>
  <form action="<%= albums_url %>" method="post">
    <%= auth %>

    <label for="album_title">Album Name:</label>
    <input type="text" name="album[title]" id="album_title">
    <br><br>

    <label for="album_band_id"></label>
    <select name="album[band_id]" id="album_band_id">
      <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%= band.name %></option>
      <% end %>
    </select>

    <input type="submit" value="Input New Album!">
  </form>
</body>
